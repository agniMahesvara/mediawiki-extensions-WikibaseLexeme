{
	"root": true,
	"extends": [
		"wikimedia/client",
		"wikimedia/mediawiki",
		"wikimedia/jquery"
	],
	"globals": {
		"mw": false,
		"module": false,
		"OO": false,
		"require": false,
		"util": false,
		"wikibase": false,
		"Vue": false,
		"Vuex": false,
		"global": false
	},
	"plugins": [
		"promise",
		"compat"
	],
	"rules": {
		"compat/compat": "error",
		"indent": [
			"error",
			"tab",
			{
				"CallExpression": {
					"arguments": "first"
				}
			}
		],
		"no-underscore-dangle": "off",
		"no-use-before-define": [
			"error",
			"nofunc"
		],
		"max-len": "off",
		"mediawiki/valid-package-file-require": "error",
		"no-jquery/no-global-selector": "off",
		"no-jquery/no-parse-html-literal": "off",
		"one-var": "off",
		"operator-linebreak": "off",
		"promise/no-native": "error",
		"valid-jsdoc": "off",
		"vars-on-top": "off",
		"wrap-iife": "off"
	}
}
